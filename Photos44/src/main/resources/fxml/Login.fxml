<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="root" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox alignment="CENTER" spacing="10">
        <Text text="PhotoApp Login">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
            <font>
                <Font size="33.0" />
            </font>
        </Text>

        <TextField fx:id="userInput" alignment="BASELINE_LEFT" onAction="#login" promptText="Enter Username" prefWidth="200">
            <font>
                <Font size="17.0" />
            </font>
        </TextField>
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#login" text="Login" />
            <Button onAction="#quitApp" text="Quit" textFill="#252be1" />
        </HBox>
        <Label fx:id="ErrorText" textFill="RED">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
    </VBox>



</VBox>
