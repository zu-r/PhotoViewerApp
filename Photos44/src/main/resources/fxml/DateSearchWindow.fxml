<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="205.0" prefWidth="455.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DateSearch">
    <bottom>
        <HBox alignment="CENTER" prefHeight="43.0" prefWidth="607.0" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="SearchButton" mnemonicParsing="false" onAction="#search" prefHeight="30.0" prefWidth="80.0" text="Search" />
                <Button fx:id="CancelButton" mnemonicParsing="false" onAction="#goBackToMainWindow" prefHeight="30.0" prefWidth="80.0" text="Cancel" />
                <Button fx:id="QuitButton" mnemonicParsing="false" onAction="#quitApp" prefHeight="30.0" prefWidth="120.0" text="Quit App" textFill="#252be1" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="From:                                                                      To:">
                    <font>
                        <Font size="15.0" />
                    </font></Text>
                <HBox alignment="CENTER" prefHeight="30.0" prefWidth="500.0" spacing="150.0">
                    <children>
                        <DatePicker fx:id="StartDatePicker" />
                        <DatePicker fx:id="EndDatePicker" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </VBox>
    </center>
    <top>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Search by Date" textAlignment="CENTER" wrappingWidth="500.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <font>
                <Font size="27.0" />
            </font>
        </Text>
    </top>
</BorderPane>
